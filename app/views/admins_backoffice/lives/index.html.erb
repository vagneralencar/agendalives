<h1 class="h3 mb-4 text-gray-800">Lives</h1>
<p>Find me in app/views/admins_backoffice/admins/index.html.erb</p>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Description</th>
      <th scope="col">Data</th>
      <th scope="col">hora</th>
      <th scope="col">Youtube</th>
      <th scope="col">Instagram</th>
      <th scope="col">Facebook</th>
      <th scope="col">Genero ID</th>
      <th scope="col">
      <%= link_to  new_admins_backoffice_life_path, class:"btn btn-success btn-circle btn-sm" do %>
        <i class="fas fa-plus"></i>
      <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @lives.each do |live| %>
    <tr>
      <th scope="row"><%= live.id %></th>
      <td><%= live.description%></td>
      <td><%= live.data%></td>
      <td><%= live.hora%></td>
      <td><%= live.youtube%></td>
      <td><%= live.instagram%></td>
      <td><%= live.facebook%></td>
      <td><%= live.genre_id%></td>
      <td>
      <%= link_to edit_admins_backoffice_life_path(live), class:"btn btn-warning btn-circle btn-sm" do %>
        <i class="fas fa-edit"></i>
      <% end %>

      <%= link_to admins_backoffice_life_path(live), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: {confirm: "Deseja realmente apagar essa live?"} do %>
        <i class="fas fa-trash"></i>
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= paginate @lives %>
</div>


