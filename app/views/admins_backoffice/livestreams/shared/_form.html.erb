<h1 class="h3 mb-4 text-gray-800"><%= "#{action_message} Live" %></h1>

<% if @livestream.errors.any? %>

<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <ul>
  <%@livestream.errors.full_messages.each do |message|%>
  <li> <%= message %> </li>
  <% end %>
  </ul>
</div>
<% end %>
<%= form_with(model: [ :admins_backoffice, @livestream ], local: true ) do |form| %>
  <div class="form-group">
    <%=form.label :title %>
    <%= form.text_field :title, class:"form-control", placeholder:"Digite o título da Live"%>
  </div>
  <div class="form-group">
    <%=form.label :description %>
    <%= form.text_field :description, class:"form-control", placeholder:"Digite a descrição"%>
  </div>
  <div class="form-row">
    <div class="form-group col-md-2">
      <%=form.label :data %>
      <%= form.text_field :data, class:"form-control", placeholder:"Digite a data"%>
    </div>
    
    <div class="form-group col-md-2">
      <%=form.label :hora %>
      <%= form.text_field :hora, class:"form-control", placeholder:"Digite a hora"%>
    </div>
  </div>
  
  <div class="form-row">
    <div class="form-group col-md-3">
      <%=form.label :image %>
      <%= form.text_field :image, class:"form-control", placeholder:"Enter Image"%>
    </div>

    <div class="form-group col-md-3">
      <%=form.label :youtube %>
      <%= form.text_field :youtube, class:"form-control", placeholder:"Enter youtube"%>
    </div>

    <div class="form-group col-md-3">
      <%=form.label :instagram %>
      <%= form.text_field :instagram, class:"form-control", placeholder:"Enter Instagram"%>
    </div>

    <div class="form-group col-md-3">
      <%=form.label :facebook %>
      <%= form.text_field :facebook, class:"form-control", placeholder:"Enter Facebook"%>
    </div>
    

  <div class="form-group col-md-2">
    <%=form.label :genre_id %>
    <%= form.collection_select(:genre_id, @genres, :id, :description, {}, {class:"form-control"}) %>
  </div>
</div>
  <h3 class="h3 mb-4 text-gray-800">Artistas Live</h3>
    <div id='live_artists'>

      <%= form.fields_for :live_artists do |live_artist| %> 
        <%= render "live_artist_fields", :f => live_artist %>
      <% end %>

      <div class='links'>
        <%= link_to_add_association('[Adicionar Artista]', form, :live_artists) %> <br>
      </div>

    </div>
  <br>
  <button type="submit" class="btn btn-primary">Salvar</button>
  <% end %>

