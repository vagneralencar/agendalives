<h1 class="h3 mb-4 text-gray-800">Administradores</h1>
<p>Find me in app/views/admins_backoffice/admins/index.html.erb</p>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">
      <%= link_to  new_admins_backoffice_admin_path, class:"btn btn-success btn-circle btn-sm" do %>
        <i class="fas fa-plus"></i>
      <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @admins.each do |admin| %>
    <tr>
      <th scope="row"><%= admin.id %></th>
      <td><%= admin.email%></td>
      <td>
      <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-warning btn-circle btn-sm" do %>
        <i class="fas fa-edit"></i>
      <% end %>

      <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: {confirm: "Deseja realmente apagar esse administrador?"} do %>
        <i class="fas fa-trash"></i>
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= paginate @admins %>
</div>

